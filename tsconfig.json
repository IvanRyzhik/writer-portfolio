{
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "target": "ES6",
    "lib": ["es2021", "dom", "dom.iterable"],
    "esModuleInterop": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@mock-hooks/*": ["src/mock-hooks/*"],
      "@mock-actions/*": ["src/mock-actions/*"],
      "@lib/*": ["src/lib/*"],
      "@config/*": ["config/*"],
      "@src/*": ["src/*"],
      "@images/*": ["public/images/*"],
      "@stores/*": ["src/stores/*"],
      "@actions/*": ["src/actions/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  }
}
